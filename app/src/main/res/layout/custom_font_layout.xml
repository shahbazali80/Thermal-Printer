<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Font"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/fontClose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_close_24"/>

    </LinearLayout>

    <TextView
        android:id="@+id/font_abril_fatface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="abril_fatface"
        android:textSize="18dp"
        android:paddingBottom="7dp"
        android:fontFamily="@font/abril_fatface"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/font_alegreya_sans_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="alegreya_sans_regular"
        android:textSize="18dp"
        android:paddingBottom="7dp"
        android:fontFamily="@font/alegreya_sans_regular"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/font_abeezee_italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="abeezee_italic"
        android:textSize="18dp"
        android:paddingBottom="7dp"
        android:fontFamily="@font/abeezee_italic"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/font_calligraffitti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="calligraffitti"
        android:textSize="18dp"
        android:paddingBottom="7dp"
        android:fontFamily="@font/calligraffitti"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/font_cookie_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cookie_regular"
        android:textSize="18dp"
        android:paddingBottom="7dp"
        android:fontFamily="@font/cookie_regular"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/font_simonetta_italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="simonetta_italic"
        android:textSize="18dp"
        android:paddingBottom="7dp"
        android:fontFamily="@font/simonetta_italic"
        android:textColor="@color/black"/>

</LinearLayout>